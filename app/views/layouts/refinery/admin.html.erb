<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <% content_for :meta, "<meta refinerycms='#{Refinery.version}' />".html_safe %>
  <%= render 'refinery/admin/head' %>

  <body bgcolor="#3A3A3A" link="#58ACFF" vlink="#44617D" topmargin="0" rightmargin="0" leftmargin="0" bottommargin="0" >
    <div style="background:#666666; height:8px">
      <spacer type="block">
      </spacer>
    </div>

    <%= render '/refinery/site_bar' %>
    <div id='tooltip_container'></div>

      <table width="100%" cellpadding="0" cellspacing="0">
        <%= render 'refinery/admin/menu' %>
      </table>

    <div id="page_container">
      <div id="page">
        <div id="content" class="clearfix">
          <div id="flash_container">
            <%= render '/refinery/no_script' %>
            <%= render '/refinery/message' %>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
