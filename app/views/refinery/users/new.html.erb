<tr>
  <td style="padding:20px 20px 20px 20px" colspan="2">
    <div align="center">
      <div id="flash_container">
              <%= render '/refinery/message' %>
      </div>

      <%= form_for :user, :url => refinery.refinery_user_registration_path, :method => "POST" do |f| -%>

        <%= render '/refinery/admin/error_messages', :object => @user, :include_object_name => true %>

        <div class='field'>
          <%= f.label :username %>
          <%= f.text_field :username, :class => 'larger widest' %>
        </div>
        <div class='field'>
          <%= f.label :email %>
          <%= f.text_field :email, :class => 'larger widest' %>
        </div>
        <div class='field'>
          <%= f.label :password %>
          <%= f.password_field :password, :class => 'larger widest' %>
        </div>
        <div class='field'>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, :class => 'larger widest' %>
        </div>

        <%#= render '/refinery/admin/form_actions', :f => f,
        #           :submit_continue => false,
        #           :submit_button_text => t('sign_up', :scope => 'refinery.users.new'),
        #           :hide_delete => true,
        #           :hide_cancel => true %>

        <div style="margin-top:10px;">
          <input id="submit_button" type="submit" value="Sign in">
        </div>

      <% end -%>
    </div>
  </td>
<tr>